{
  "version": 2,
  "builds": [
    {
      "src": "api-serverless/**/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api-serverless/$1.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
} 